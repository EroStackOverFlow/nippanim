{# src/Triv/QuizzBundle/Resources/views/Quizz/form2.html.twig #}


{# Le formulaire reste inchangé #}
<h3>Formulaire d'edition d'un Quizz</h3>

<div  class="row">
   <div class="span4">

   </div>
   
    <div class="span6">

	<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
     

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

	
	  <div class="form-group">
      {{ form_label(form.name, "Nom du Quizz :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.name) }}
      <div class="col-sm-4">
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
	
	<div class="form-group">
      {{ form_label(form.auteur, "createur du Quizz :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.auteur) }}
      <div class="col-sm-4">
        {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

	
	<div class="form-group">
      {{ form_label(form.identifiant, "identifiant du Quizz:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.identifiant) }}
      <div class="col-sm-4">
        {{ form_widget(form.identifiant, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div> 
	
	 <div class="form-group">
      {{ form_label(form.url, "Source du Quizz :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.url) }}
      <div class="col-sm-4">
        {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

   
	 

  {# Génération du label + error + widget pour un champ #}
 
  
  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  <p>&nbsp; {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_widget(form.effacer, {'attr': {'class': 'btn btn-primary'}}) }}
  </p>
  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}
  
  {# Fermeture de la balise <form> du formulaire HTML #}
  
  
  {{ form_end(form) }}
 
</div>
	
   </div>

</div>
