{# src/Triv/ForumBundle/Resources/views/Forum/form2.html.twig #}


{# Le formulaire reste inchangé #}
<h3>Formulaire d'annonce</h3>

<div  class="row">
   <div class="span4">
    
   </div>
   
   <div class="span6">
    
	<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
     

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    

    {# Idem pour un autre champ. #}
    <div class="form-group">
      {{ form_label(form.content, "Contenu de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.content) }}
      <div class="col-sm-4">
        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
 
	
  {# Génération du label + error + widget pour un champ #}
 
  
  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  <p>&nbsp; {{ form_widget(form.poster, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_widget(form.effacer, {'attr': {'class': 'btn btn-primary'}}) }}
  </p>
  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}
  
  {# Fermeture de la balise <form> du formulaire HTML #}
  
  
  {{ form_end(form) }}
 
</div>
	
   </div>

</div>
