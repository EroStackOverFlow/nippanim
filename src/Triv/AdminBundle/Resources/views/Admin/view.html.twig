{# src/Triv/AdminBundle/Resources/view/Admin/view.html.twig #}

{% extends "TrivAdminBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block AllBody %}
</br></br>
<div class="row">
   <div class="span4">
   </div>
    <div class="span4">
	 <div class="thumbnail thumbnail_4">  
      <img src="{{ asset('uploads/imgAnimes/')}}/{{ animes.image.id }}.{{ animes.image.url }}" alt="{{ animes.image.alt }}"  class="img-radius">
	 </div>
   </div>
</div>

<div class="row">
   <div class="span4">
   </div>
    <div class="span6">

  <i>Par {#{{ animes.author }}#}, le {{ animes.date|date('d/m/Y') }}</i>

  <div class="well" style="clear: both;">
   <strong> {{animes.synopsi }}  </strong>
  </div>

  

  <p>
    <a href="{{ path('triv_Admin_Animes_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour Ã  la liste
    </a>
    <a href="{{ path('Triv_admin_Animes_edit', {'id': animes.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'anime
    </a>
    <a href="{{ path('Triv_forum_delete', {'id': animes.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'anime
    </a>
  </p>   
    <p> <strong> LISTE DES SOURCES D'EPISODES </strong></p>
       <ul class = "well">
    {% for episodes in listEpisodes %}
      <li>
       Titre:{{ episodes.title }},
	   Nombre d'episode:{{ episodes.nb_episodes }},
	     Source:{{ episodes.title }},
       ajouter le: {{ episodes.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !)d'episodes</li>
    {% endfor %}
  </ul>
   </div>
</div>

     
      
