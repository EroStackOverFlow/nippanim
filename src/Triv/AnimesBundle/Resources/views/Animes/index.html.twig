   
{% extends "TrivAnimesBundle::layout.html.twig" %}   
  {% block title %}
{{titrePage}} - {{ parent() }}
  {% endblock %} 
{% block AllBody %}
<!--==============================header=================================-->
<div class="row">
   <div class="span2">
   </div>
   <div class="span9">
      <h3>       <a href="{{ path('triv_AnimeSerie_home') }}"> ANIMES SERIES </a>   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="{{ path('triv_FilmsEtOav_home') }}">FILMS ET OAV </a>      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;   <a href="{{ path('triv_CritiqueAnimes_home') }}">CRITIQUES MANGAS</a>  </h3>
                
	  {% if is_granted('ROLE_AJOUTEUR') %}
 </br>
	    <a href="{{ path('Triv_Animes_add') }}" class="btn btn-default">
           <i class="glyphicon glyphicon-edit"></i>
             ajouter
          </a>
		
{% endif %}
		  
<section id="content">
<div class="sub-content">
  <div class="container">
          
  
          <h4 class="bot-0">{{titrePage}}</h4>
     </br>
     
        
		   {% for anime in listAnime %}	
            <div class="row">
			  
			   <div class="span3">
			  
            	<figure class="lead p2"><a href="{{ path('Triv_Animes_view', {'id': anime.id}) }}"><img src="{{ asset('uploads/imgAnimes/')}}/{{ anime.image.id }}.{{ anime.image.url }}" alt="{{ anime.image.alt }}"  class="img-radius" style="width: 300px; height: 150px;"></a>
				<h6>{{ anime.titre }} , ({{ anime.nbEpisodes}})episodes(s) </h6> 
				<h6> Cathegorie:{{ anime.category }}</h6> 			
				</figure>               
			   
			   
			   </div>
			   <div class="span4">	 </br>		
				{{ anime.synopsi }}  </br>
<a href="{{ path('Triv_Animes_view', {'id': anime.id}) }}" class="btn btn_">Visionner</a>				
				</div>
				</div>
     {% else %}
      <strong><li>Pas (encore !) d'animes</li></strong>
            
             {% endfor %}
	  
	         
			 <ul class="pagination">
  {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('triv_Animes_home', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
  </ul>
			 
    	</div>
    </div>           
  </div>
</div>
</section>


   

  

 


{% endblock %}