{# src/Triv/AnimesBundle/Resources/views/Animes/form.html.twig #}{# Le formulaire reste inchangé #} <div class="row">   <div class="span4">   </div>    <div class="span4">     <h3>publiez un anime</h3>   </div></div><div  class="row">   <div class="span4">   </div>  <div class="well span6"  >  {{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'my_form',  'enctype': 'multipart/form-data'} }) }}         {# Les erreurs générales du formulaire. #}    {{ form_errors(form) }}      <div class="form-group">      {{ form_label(form.image, "image :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}      {{ form_errors(form.image) }}      <div class="col-sm-4">        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}      </div>    </div>     <div class="form-group">      {{ form_label(form.titre, "titre de l'anime :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}      {{ form_errors(form.titre) }}      <div class="col-sm-4">        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}      </div>    </div>		 <div class="form-group">      {{ form_label(form.auteur, "Auteur du manga :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}      {{ form_errors(form.auteur) }}      <div class="col-sm-4">        {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}      </div>    </div>		<div class="form-group">      {{ form_label(form.genre, "genre :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}      {{ form_errors(form.genre) }}      <div class="col-sm-4">        {{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}      </div>    </div>		<div class="form-group">      {{ form_label(form.datesortie, "date de sortie :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}      {{ form_errors(form.datesortie) }}      <div class="col-sm-4">        {{ form_widget(form.datesortie, {'attr': {'class': 'form-control'}}) }}      </div>    </div>		<div class="form-group">      {{ form_label(form.category, "Type:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}      {{ form_errors(form.category) }}      <div class="col-sm-4">        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}      </div>    </div>	    <div class="form-group">      {{ form_label(form.synopsi, "synopsi:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}      {{ form_errors(form.synopsi) }}      <div class="col-sm-4">        {{ form_widget(form.synopsi, {'attr': {'class': 'form-control'}}) }}      </div>    </div>   	   {# Génération du label + error + widget pour un champ #}    {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}    {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}  {{ form_widget(form.effacer, {'attr': {'class': 'btn btn-primary'}}) }}    {# Génération automatique des champs pas encore écrits.     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)     et tous les champs cachés (type « hidden »). #}  {{ form_rest(form) }}    {# Fermeture de la balise <form> du formulaire HTML #}      {{ form_end(form) }}  </div></div>